<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="180dp"
    android:layout_marginEnd="12dp">

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGlass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gray3"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <!-- Glass Image (same for all) -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageGlass"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:contentDescription="Glass Image" />

            <!-- Glass Type -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textGlassType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triplex 5+5"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Orange diagonal banner for recommended -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bannerRecommended"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:text="RECOMMENDED"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:rotation="45"
        android:background="#FFA500"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:translationX="20dp"
        android:translationY="8dp" />
</FrameLayout>
