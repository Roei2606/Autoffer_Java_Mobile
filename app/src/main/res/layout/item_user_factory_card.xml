<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="16dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="72dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageFactory"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_placeholder_user"
                app:shapeAppearanceOverlay="@style/CircleImage"
                android:background="@drawable/profile_image_border" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textFactoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Factory Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/layoutFactoryAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:focusable="true">


                <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iconFactoryLocation"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ic_location_pin" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textFactoryAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Factory Address"
                        android:textColor="@color/blue"
                        android:textStyle="italic"
                        android:textSize="14sp" />
                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textBusinessId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business ID: #123456"
                    android:textColor="@color/gray1"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonShowContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Contact Info"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:backgroundTint="@color/gray_light"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:id="@+id/contactSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textContactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner Name" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textContactPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textContactEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/buttonOpenChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_send_message"
            android:tint="@color/light_green" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
